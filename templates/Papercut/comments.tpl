<div class="comments">
	
	<div class="cm-info">
		<div class="avatar"><img src="{foto}" alt=""/></div>
		<span>{group-name}</span>
	</div>

	<div class="section">

		<div class="cm-head">
			<div class="right">
				<strong>{author}</strong> در <strong>{date}</strong> گفته:
			</div>
			<div class="left">
				[fast]<i class="flaticon-chat"></i>پاسخ[/fast]
				[com-edit]<i class="flaticon-pencil"></i>ویرایش[/com-edit]
				[com-del]<i class="flaticon-trash"></i>حذف[/com-del]
			</div>
		</div>

		{comment}

		[signature]<br clear="all" /><div class="signature">--------------------</div><div class="slink">{signature}</div>[/signature]

	</div>

</div>